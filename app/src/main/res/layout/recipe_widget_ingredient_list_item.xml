<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/recipe_widget_ingredient_list_item"
    android:padding="@dimen/regular_padding">

        <TextView
            android:id="@+id/appwidget_ingredient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem"
            tools:text="@string/hello_blank_fragment"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="@dimen/large_text_size"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <TextView
                android:id="@+id/appwidget_ingredient_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/small_margin"
                android:textAppearance="?attr/textAppearanceListItem"
                tools:text="@string/hello_blank_fragment"
                android:textSize="@dimen/small_text_size"/>

            <TextView
                android:id="@+id/appwidget_ingredient_measure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceListItem"
                tools:text="@string/hello_blank_fragment"
                android:textSize="@dimen/small_text_size"
                android:textStyle="italic"/>
        </LinearLayout>
</LinearLayout>
